/* ==== HELPERS DE CONTAINER ==== */
.container 
	width 100%
	max-width: 1200px
	margin-right auto
	margin-left auto
	padding $spacing-unit-medium
	
	@media (min-width $screen-large)
		padding $spacing-unit-medium $spacing-unit-large
		
/* ==== LOGO ==== */
.brand 
	margin-top 25px
	display block
	line-height 0
	
	@media (min-width $screen-large)
		margin-top 8px 
	
	
	> .image
		@media (min-width $screen-large)
			height 98px
			
	
	> .slogan	
	> .image
		display inline-block
		vertical-align middle 
	
	> .slogan	
		padding-left $spacing-unit-medium	
		color $color-five
	
/* ==== BOTÃ•ES ==== */
.button 
	shadow()
	padding 12px 12px
	border-radius $spacing-unit-small
	
	&.--default
		background-color #FFFFFF
		color #color-three
		

/* ==== BANNER SLIDE ==== */
.banner
	width 100%
	position relative
	display block

/* ===== HEADERS ===== */
.title 
	font-size 1.6rem
	font-weight 400
	margin-bottom $spacing-unit-medium
	text-transform lowercase
	
	
	&.--text-primary 
		color $color-one
	
	&.--text-secondary
		color $color-two
	
	
	&.--background
		color #FFFFFF
		padding  $spacing-unit-small ($spacing-unit-small * 2)
		display inline
		
		&.--primary 
			background-color rgba($color-one, .9)
		
		&.--secondary
			background-color rgba($color-two, .9)
		

		&.--medium
		&.--large
			display block
				
		&.--medium
			@media (max-width $screen-xsmall-max)
				width 33.33%
				
			@media (min-width $screen-small) and (max-width $screen-small-max)
				width 60%
		
			
				
		&.--large
			@media (max-width $screen-xsmall-max)
				width 45%
				
			@media (min-width $screen-small) and (max-width $screen-small-max)
				width 70%
				
		&.--auto
			padding-right $spacing-unit-large * 2
			
				
	&.--light
	&.--background
		font-size 1.3rem
		text-transform uppercase

.subtitle
	font-size 1.8rem
	line-height 2rem
	color #FFFFFF
	
	@media (min-width $screen-medium)
		font-size 1.2rem
	
	&.--dark
		color $color-three
		
.description 
	font-size 1.2rem
	line-height 1.6rem

/* ==== MAIN ==== */
.main
	clear both
	padding-top $spacing-unit-large
	margin-bottom $spacing-unit-large * 1.5

/* ==== CARDS ==== */
.card 
	border-bottom solid 1px #CCCCCC
	padding-bottom $spacing-unit-large
	padding-right 0
	padding-left 0
	margin-bottom $spacing-unit-medium
	cursor pointer
	
	@media (min-width $screen-large)
		background-color #F2F2F2
	
	> .image
		width 100%
		height 215px
	
	.title
		padding-top $spacing-unit-small * 4
		
	.description 
		font-weight 400
		
	&.--inline
		background-color transparent
		border-bottom none
		
		> .image
			width 50%
			display inline-block
			
		> .hgroup
			width 40%
			display inline-block
			padding-left $spacing-unit-medium
			vertical-align top
			padding-bottom $spacing-unit-small * 4			
			
			> .title 
				margin-bottom $spacing-unit-small
			
/* ==== LISTA ==== */
.list
	list-style none
	
	.item
		display block
		padding-top $spacing-unit-small * 4.4
		padding-bottom $spacing-unit-small * 4.4
		padding-right $spacing-unit-large * 2
		border-bottom solid 1px #CCCCCC
		
/* ==== PUBLICIDADE ==== */
.advertising
	cursor pointer
		
	@media (max-width $screen-small-max)
		margin-bottom $spacing-unit-large * 2

	&:before
		content "Publicidade"
		display block
		font-size 0.9rem
		color #B6B6B6
		margin 0
		padding-top 0
		padding-bottom $spacing-unit-small
		
	> .image 
		width auto
		max-width 100%