.container 
	width 90%
	margin-right auto
	margin-left auto
	
.hidden 
	display none !important
	
.hidden-xsmall 
	@media (max-width $screen-xsmall-max)
		display none !important
		
.hidden-small 
	@media (max-width $screen-small-max)
		display none !important

.hidden-medium 
	@media (max-width $screen-medium-max)
		display none !important
	
.hidden-large 
	@media (min-width $screen-large)
		display none !important
		