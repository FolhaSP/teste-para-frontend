* 
    position relative
    list-style none
    margin 0
    padding 0

    
content-center()
    width 100%
    max-width 1140px
    margin 0 auto

img
    max-width 100%
    height auto

body
    font-family Arial
    
.wrapper 
    content-center()

header
    background #3498db
    width 100%
    height 98px
    
    .listMenu
        display flex
        justify-content space-between
        align-items center
    
section
    margin-top 60px
    
    &#Part1
        .wrapper
            margin 0 auto
    &#Part2
        .wrapper
            .highlight
                display flex
                justify-content space-between
    &#Part3
        .wrapper
            display flex
            justify-content space-between
            
            .destaques
                width 100%
                max-width 755px
                
                .ditem
                    width 100%
                    max-width 335px
                    float left
                    padding 10px 30px 10px 0
                                    
                    p
                        padding 20px 0
                        border-bottom 1px solid #ccc
            .ads
                width 100%
                max-width 300px
                margin 20px 30px 0 0
                
                h3
                    font-size 12px
                    color #c6c6c6
                    text-align right
                    
    &#Part4
        .wrapper
            display flex
            justify-content space-between
            
            .list
            .ultimasNot
            .ultimosDest
                width 100%
                max-width 310px
                
            .list
                li
                    border-bottom 1px solid #ccc
                    margin 20px 0
                
                li:first-child
                    margin-top 0
    &#Part5
        background #3498db
        
        .wrapper
            display flex
            justify-content flex-end
            width 100%
            height 50px
            align-items center
            
            p
                color #ffffff


footer
    background #2c3e50
    overflow hidden
    .wrapper
        display flex
        justify-content flex-start
        align-items center
        
        .logoFooter
            width 100%
            max-width 132px
            padding 20px
            
        p
            color #ffffff
            width 100%
            max-width 650px